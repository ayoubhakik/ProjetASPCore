@model projetASP.Models.Etudiant
@Styles.Render("../Content/css/Recu.css")
<body style="background-color:white;">
    <div class="header-logo">
            <img src="~/Content/img/ensa.jpg" width="200" height="100" style="float:left" />
            <img src="~/Content/img/images.png" width="392" height="100"  style="position:relative; left:30px" />
            <img src="~/Content/img/uca.jpg" width="200" height="100" style="float:right" />
       
    </div>
    <br /><br />
    <div class="header-text httal htvam" style="margin-left:250px; ">
        <h2 id="header_5" class="form-header" data-component="header" style="font-weight:bold !important">
            Reçu des Informations Personelles
        </h2>
    </div>

    <div class="header-logo"  height="250px">
        @if (@Model.photo_link != null)
        {
        <img src="~/Image/@Model.photo_link" id="image" alt=""  class="header-logo-left"  style="border-radius:30px "/>
        }
        else {
        <img src="~/Content/img/login.png"id="image" alt=""  class="header-logo-left"  style="border-radius:30px "/>
        }

    </div>
    
    <ul class="form-section page-section">
        <li class="form-line" data-type="control_fullname" id="id_3">
            <label class="form-label form-label-top form-label-auto" id="label_3" for="first_3"> Nom et Prénom : </label>
            <div id="cid_3" class="form-input-wide">
                <div data-wrapper-react="true">
                    <span class="form-sub-label-container " style="vertical-align:top" data-input-type="first">
                        @Html.Label(@Model.nom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.Label(@Model.prenom, new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                </div>
            </div>
        </li>

        <li class="form-line" data-type="control_calculation" id="id_12">
            <label class="form-label form-label-top form-label-auto" id="label_12" for="input_12"> CIN (Carte d'identité Nationale) :</label>
            <div id="cid_12" class="form-input-wide">
                @Html.Label(@Model.cin, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </li>

        <li class="form-line" data-type="control_calculation" id="id_15">
            <label class="form-label form-label-top form-label-auto" id="label_15" for="input_15"> CNE(Code Nationale d'Étudiant) :</label>
            <div id="cid_15" class="form-input-wide">
                @Html.Label(@Model.cne, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </li>
        
            <li class="form-line" data-type="control_calculation" id="id_16">

                <label class="form-label form-label-top form-label-auto" id="label_15" for="input_15"> Date de Naissance :</label>
                <div id="cid_17" class="form-input-wide">
                    @if (@Model.dateNaiss != null)
                    {
                    @Html.Label(@Model.dateNaiss.ToString())
                    }
                    else
                    {
                        <p>---------</p>
                    }
                </div>
            </li>

            <li class="form-line" data-type="control_calculation" id="id_18">
                <label class="form-label form-label-top form-label-auto" id="label_18" for="input_18"> Lieu de Naissance :</label>
                <div id="cid_18" class="form-input-wide">
                    @if (@Model.lieuNaiss != null)
                    {
                        @Html.Label(@Model.lieuNaiss.ToString())
                    }
                    else
                    {
                        <p>---------</p>
                    }
                </div>
            </li>

            <li class="form-line" data-type="control_calculation" id="id_19">
                <label class="form-label form-label-top form-label-auto" id="label_19" for="input_19"> Nationalité :</label>
                <div id="cid_19" class="form-input-wide">
                    @if (@Model.nationalite != null)
                    {
                        @Html.Label(@Model.nationalite.ToString())
                    }
                    else
                    {
                        <p>---------</p>
                    }

                </div>
            </li>

            <li class="form-line" data-type="control_calculation" id="id_20">
                <label class="form-label form-label-top form-label-auto" id="label_19" for="input_19"> Numéro de Téléphone : </label>
                <div class="form-input-wide">
                    @if (@Model.phone == null)
                    {

                        <p>---------</p>
                    }
                    else
                    {
                        @Html.Label(@Model.phone.ToString())

                    }

                </div>
            </li>
            <li class="form-line" data-type="control_calculation" id="id_21">
                <label class="form-label form-label-top form-label-auto" for="input_19"> GSM :</label>
                <div class="form-input-wide">
                    @if (@Model.gsm != null)
                    {
                        @Html.Label(@Model.gsm.ToString())
                    }
                    else
                    {
                        <p>---------</p>
                    }


                </div>
            </li>

            <li class="form-line" data-type="control_email" id="id_7">
                <label class="form-label form-label-top form-label-auto" id="label_7" for="input_7"> Email :</label>
                <div class="form-input-wide">
                    @if (@Model.email != null)
                    {
                        <label> @Model.email</label>
                    }
                    else
                    {
                        <p>---------</p>
                    }



                </div>
            </li>
            <li class="form-line" data-type="control_email" id="id_8">
                <label class="form-label form-label-top form-label-auto" id="label_7" for="input_7"> Adresse : </label>
                <div class="form-input-wide">
                    @if (@Model.address != null)
                    {
                        @Html.Label(@Model.address.ToString()) 
                        if (@Model.ville != null)
                        {
                            <p style="font-weight:bold;color: #11273F;
    font-size:20px;">Ville :</p>@Html.Label(@Model.ville.ToString())
                        }

                    }
                    else
                    {
                        <p>---------</p>
                    }



                </div>
            </li>

           


            <li class="form-line" data-type="control_email" id="id_9">
                <label class="form-label form-label-top form-label-auto" id="label_7" for="input_7"> Votre Choix </label>

                <div>


                    <p class="form-label form-label-top form-label-auto"> 1: Génie  @(Model.Choix.Substring(0, 1) == "F" ? "Informatique" : "") @(Model.Choix.Substring(0, 1) == "D" ? "Industriel" : "")   @(Model.Choix.Substring(0, 1) == "P" ? "Procédé" : "")     @(Model.Choix.Substring(0, 1) == "T" ? "Réseau" : "")</p>
                    <p class="form-label form-label-top form-label-auto">  2: Génie  @(Model.Choix.Substring(1, 1) == "F" ? "Informatique" : "") @(Model.Choix.Substring(1, 1) == "D" ? "Industriel" : "")   @(Model.Choix.Substring(1, 1) == "P" ? "Procédé" : "")     @(Model.Choix.Substring(1, 1) == "T" ? "Réseau" : "")</p>
                    <p class="form-label form-label-top form-label-auto">  3: Génie  @(Model.Choix.Substring(2, 1) == "F" ? "Informatique" : "") @(Model.Choix.Substring(2, 1) == "D" ? "Industriel" : "")   @(Model.Choix.Substring(2, 1) == "P" ? "Procédé" : "")     @(Model.Choix.Substring(2, 1) == "T" ? "Réseau" : "")</p>


                </div>
            </li>

        
    </ul>

</body>