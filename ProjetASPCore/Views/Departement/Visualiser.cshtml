@model IEnumerable<ProjetASPCore.Models.Etudiant>

@{
    Layout = "~/Views/Shared/_DepartementLayout.cshtml";
}



<style>
    table {
        /*display:inline-block;*/
        width: 100%;
        margin: 3px;
        border: none;
    }

    tr {
        display: inline-block;
    }
        /*img {
        height: 180px;
        width: 180px;
        border: none;
    }*/
        tr td img {
            border-radius: 10px;
            height: 160px;
            width: 160px;
            background: #333;
            transition: all 0.2s ease;
            float: left;
            margin: 0 15px 15px 0;
            box-shadow: 5px 5px 10px #061323;
        }

    .text {
        position: relative;
        text-align: center;
        color: #061323;
        font-size: 17px;
        font-family: sans-serif;
        font-weight: bold;
    }

    tr td:hover img {
        box-shadow: 15px 15px 25px #061323;
        cursor: pointer;
        transform: scale(1.05);
    }

    span {
        text-align: center;
    }
</style>



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header" style="background:linear-gradient(to bottom, #11273F, #061323, #204773);color:white">
                        <h4 class="card-title"></h4>

                        <h2>Les photo de tous les etudiants</h2>
                    </div>
                    <div class="card-body">

                        @if (Model == null)
                        {
                            <span style="color:black">no data founded</span>
                        }
                        else
                        {
                            <table class="tableau">
                                @foreach (var item in Model)
                                {

                                    if (@item.photo_link == null)
                                    {
                                        <tr class="imageTire">
                                            <td>
                                                <img src="~/Content/img/login.png" alt="Photo" />
                                                <br />
                                                <span class="text"> @Html.DisplayFor(modelItem => item.nom)   @Html.DisplayFor(modelItem => item.prenom)</span>
                                            </td>
                                        </tr>


                                    }
                                    else
                                    {
                                        <tr class="imageTire">
                                            <td>
                                                <img src="~/Image/@item.photo_link" alt="Photo" />
                                                <br />
                                                <span class="text">  @Html.DisplayFor(modelItem => item.nom)   @Html.DisplayFor(modelItem => item.prenom)</span>
                                            </td>

                                        </tr>
                                    }


                                }
                            </table>
                        }


                    </div>
                </div>
            </div>



        </div>
    </div>
</div>