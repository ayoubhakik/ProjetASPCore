@model ProjetASPCore.Models.Departement


@{
    ViewBag.Title = "Authentification";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/main3.css">
    <link rel="stylesheet" href="css/libs.min.css">
    <link href="https://fonts.googleapis.com/css?family=Jura" rel="stylesheet">
    <!--===============================================================================================-->

</head>
<body style="background-color: #ffffff;">
    <div class="hero ">
        <div class="page">
            <div class="wrapper col-lg-12 col-md-8 col-sm-6">
                <div class="container">
                    <div class="day"><span id="day"></span> <span id="month"></span> <span id="year"></span></div>
                    <div class="svg-container col-lg-12 col-md-8 col-sm-6">
                        <svg id='clock' class="digital" width='350' height='350' viewBox='0 0 350 350'>
                            <title>Clock</title>
                            <g id='minutes' style="fill: grey" transform='translate(175,175)'>
                                <!-- generated by JS -->
                            </g>
                            <g id='hours' style="fill: grey" transform='translate(175, 175)'>
                                <!-- generated by JS -->
                            </g>
                            <path id='seconds' d='' fill='none' stroke-width='5' transform="translate(75,75)"></path>
                        </svg>
                    </div>
                    <div class="time">
                        <div class="time-block">
                            <span id="h"></span>
                        </div>
                        <div class="">:</div>
                        <div class="time-block">
                            <span id="m"></span>
                        </div>
                        <div class="">:</div>
                        <div class="time-block">
                            <span id="s"></span>
                        </div>
                    </div>
                    <div class="week">
                        <ul>
                            <li class="week-day">Sun</li>
                            <li class="week-day">Mon</li>
                            <li class="week-day">Tue</li>
                            <li class="week-day">Wed</li>
                            <li class="week-day">Thur</li>
                            <li class="week-day">Fri</li>
                            <li class="week-day">Sat</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="button" style="visibility:visible !important">
            <a href="#2" data-js-hook="link">
                <i id="icon" class="fa fa-chevron-down"></i>
            </a>
        </div>
    </div>
    <div class="content-wrapper" id="2" style="height:85%;">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">

                    @using (Html.BeginForm("Authentification", "User", FormMethod.Post, new { @class = "login100-form validate-form" }))
                    {


                        if (@ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                <strong>@ViewBag.Message!</strong>
                            </div>
                        }
                        <span class="login100-form-title p-b-43" style="color:#B49082;">
                            <strong class="font-weight-bold"> ESPACE DEPARTEMENT </strong>
                        </span>


                        <div class="wrap-input100 validate-input" data-validate="Valid Username is required">
                            @Html.TextBox("userName", null, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="label-input100">Nom utilisateur</span>
                        </div>


                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            @Html.Password("mdp", null, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="label-input100">Mot de passe</span>
                        </div>

                        <div class="flex-sb-m w-full p-t-3 p-b-32">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <p class="font-weight-bold"> <label class="form-check-label" for="exampleCheck1">Remember me!</label></p>
                            </div>

                            <div>
                                <a href="#" class="font-weight-normal">
                                    <strong style="font:bold">  Oublié mot de passe? </strong>
                                </a>
                            </div>
                        </div>





                        <div class="container-login100-form-btn">
                            <button class="btn-lg btn-block" name="loginBtn" value="Login">
                                <p class="login" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Se connecter</p>
                            </button>

                        </div>

                        <Br />
                        <div class="container-login100-form-btn1">
                            <a class="btn-lg btn-block " href="~/User/Authentification1"><p class="login1" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;text-align:center">Se connecter comme étudiant</p></a>
                        </div>

                            }



                    <div class="login100-more" style="background-image: url('../Content/img/info.png');">
                    </div>
                </div>

            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/js/main1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="js/libs.min.js"></script>
    <script>
        $(".button").click(function () {
            $(".button").hide()
        });
    </script>
</body>
</html>